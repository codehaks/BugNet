@page
@model BugNet.Pages.DeleteModel
@{
}


<h1> Delete Bug</h1>

<div class="row">
    <div class="col-6">
        <input asp-for="SelectedBug.Name" class="form-control" disabled/>
        <br />
        <textarea asp-for="SelectedBug.Description" class="form-control" disabled></textarea>
        <br />
        <input asp-for="SelectedBug.IsDone" class="check mb-3" disabled/> Is Done
        <br />
        <form method="post">
            <input asp-for="SelectedBug.Id" hidden />
          
            <button class="btn btn-danger">Delete</button>

        </form>
    </div>
</div>